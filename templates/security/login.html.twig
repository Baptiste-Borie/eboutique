{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-4 p-4">
                <h1 class="h4 mb-4 text-primary text-center">üîê Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        Vous √™tes d√©j√† connect√© en tant que {{ app.user.userIdentifier }}.
                        <a href="{{ path('app_logout') }}">Se d√©connecter</a>
                    </div>
                {% endif %}

                <form method="post" novalidate>
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email"
                               name="email"
                               id="inputEmail"
                               value="{{ last_username }}"
                               class="form-control"
                               autocomplete="email"
                               required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password"
                               name="password"
                               id="inputPassword"
                               class="form-control"
                               autocomplete="current-password"
                               required>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid mb-3">
                        <button class="btn btn-primary btn-lg" type="submit">Se connecter</button>
                    </div>

                    <p class="text-center mb-0">Pas encore de compte ?
                        <a href="{{ path('app_register') }}">Cr√©er un compte</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
