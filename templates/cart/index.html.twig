{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="mb-4">Votre panier</h2>

    {% if cartItems is not empty %}
        <table class="table table-striped">
            <thead>
        <tr>
            <th>Film</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Categorie</th>
            <th>Action</th>
        </tr>
            </thead>
            <tbody>
                {% set total = 0 %}
                {% for item in cartItems %}
                    {% set totalItem = item.film.prix * item.quantity %}
                    {% set total = total + totalItem %}
                    <tr>
                        <td>{{ item.film.titre }}</td>
                        <td>{{ item.film.prix }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ totalItem }} €</td>
                        <td>{{item.categorie}}</td> 
                        <td>
                            <a href="{{ path('app_cart_remove', {'id': item.id}) }}" class="btn btn-danger btn-sm">Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total :</th>
                    <th>{{ total }} €</th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}
