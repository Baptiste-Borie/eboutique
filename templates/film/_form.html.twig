{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm rounded-4 p-4">
        <h2 class="mb-4 text-primary">{{ button_label|default('Enregistrer le film') }}</h2>

        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(field, {'attr': {'class': field.vars.block_prefixes|last == 'choice' ? 'form-select' : 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-success px-4">
                âœ… {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
