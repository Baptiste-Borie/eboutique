{% extends 'base.html.twig' %}

{% block title %}Films - Gestion{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">üéûÔ∏è Liste des films</h1>
        <a href="{{ path('app_film_new') }}" class="btn btn-success">
            ‚ûï Ajouter un film
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Cat√©gorie</th>
                    <th>Prix (‚Ç¨)</th>
                    <th>Format</th>
                    <th>Image</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for film in films %}
                    <tr>
                        <td>{{ film.id }}</td>
                        <td>{{ film.titre }}</td>
                        <td>{{ film.description|length > 60 ? film.description|slice(0, 60) ~ '‚Ä¶' : film.description }}</td>
                        <td>{{ film.categorie.nom ?? '‚Äî' }}</td>
                        <td>{{ film.prix ?? '-' }}</td>
                        <td>{{ film.format }}</td>
                        <td>
                            {% if film.image %}
                                <img src="{{ asset('uploads/films/' ~ film.image) }}" alt="{{ film.titre }}" class="img-thumbnail" style="max-height: 60px;">
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-sm btn-outline-primary me-1">Voir</a>
                            <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Aucun film trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
